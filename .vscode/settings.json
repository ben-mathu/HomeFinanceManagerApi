{
    "maven.view": "flat",
    "java.configuration.updateBuildConfiguration": "automatic",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*",
                "isAsync": true,
                "cmd": "mvn clean tomcat7:run"
            },
            {
                "match": ".*",
                "cmd": "xdg-open http://localhost:8000/hfms-webapp/"
            }
        ]
    }
}