{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "CodeLens (Launch) - Application",
            "request": "launch",
            "mainClass": "com.miiguar.hfms.Application",
            "projectName": "hfms-webapp"
        },
        {
            "type": "java",
            "name": "Debug (Attach) - Remote",
            "request": "attach",
            "hostName": "localhost",
            "port": 8000
        },
        {
            "type": "chrome",
            "name": "Launch localhost",
            "request": "launch",
            "url": "http://localhost:8000/hfms-webapp",
            "webRoot": "${workspaceFolder}/src/main/webapp"
        },
        {
            "type": "java",
            "name": "CodeLens (Launch) - ConfigureApp",
            "request": "launch",
            "mainClass": "com.miiguar.hfms.config.ConfigureApp",
            "projectName": "hfms-webapp"
        }
    ]
}